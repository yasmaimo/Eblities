<div class="container-fluid">
	<div class="row justify-content-center">

		<p class="col-12 d-lg-block d-none"></p>

		<div class="col-lg-3 col-sm-11">

	    <%= search_form_for @search_tag do |f| %>
	      <div class="form-inline my-lg-0 my-2">
	        <%= f.text_field :name_cont, class: "col-sm-10 col-xs-12 form-control", placeholder: 'タグを検索' %>
	        <%= f.button fa_icon("search"), class: 'col-sm-2 col-xs-12 btn btn-outline-dark my-lg-0 my-2'%>
	      </div>
	    <% end %>

	  </div>

		<div class="col-lg-9 col-sm-11">

			<% if Tag.exists? %>

			  <table class="table bg-white">
				  <thead class="">
				    <tr>
				    	<th>
					    	<div class="row">
					    		<div class="col-7">
					    			<span>タグ一覧</span>
					    		</div>
					    	</div>
				    	</th>
				    </tr>
				  </thead>

			    <tbody>

			    	<% @tags.each do |tag| %>

				      <tr><!-- ここでeach -->
				        <td>
				          <div class="card">
				            <div class="card-header">
				              <div class="row">

				                <div class="col-6 ranking-table">
				                	<img src="https://placehold.jp/40x40.png" class="rounded">
				                	<span class="text-secondary">
				                		<%= link_to tag.name, tag_path(tag) %>
				                	</span>
				                </div>

				                <div class="col-6 small text-secondary text-right align-self-center">

				                	<span class="mx-1">
				                		<% tagging_article = Tagging.where(tag_id: tag.id, taggable_type: "Article") %>
				                		<%= fa_icon("paperclip") %><%= tagging_article.count %>個の記事
				                	</span>

				                	<span class="mx-1">
				                		<% tagging_user = Tagging.where(tag_id: tag.id, taggable_type: "User") %>
				                		<%= fa_icon("users") %><%= tagging_user.count %>名が登録
				                	</span>

				                </div>

				              </div>
				            </div>

				          </div>
				        </td>
				      </tr><!-- eachを終了 -->

				    <% end %>

			    <% else %>

					  <table class="table bg-white">
						  <thead>
						    <tr>
						    	<th class="text-center">
					    			<span>タグ一覧</span>
						    	</th>
						    </tr>
						  </thead>
						</table>

						<p class="text-center font-weight-bold">タグはまだ登録されていません</p>

			    <% end %>

		    </tbody>
		  </table>

		</div>
	</div>
</div>