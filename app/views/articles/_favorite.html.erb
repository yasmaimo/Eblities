<% if article.favorited_by?(current_user) %>

	<p class="text-secondary text-center mb-2 d-none d-lg-block">
		<%= article.favorites.count %>
	</p>

	<%= button_to article_favorites_path(article), style: "text-decoration: none;", method: :delete, id: "favorite-button", remote: true do %>

		<span class="list-group-item list-group-item-action nav-font bg-danger text-white mb-2">
			<%= fa_icon("thumbs-up 2x") %>
			<span class="ml-1 font-weight-bold d-lg-none d-sm-inline">
				<%= article.favorites.count %>
			</span>
		</span>

	<% end %>

<% else %>

	<p class="text-secondary text-center mb-2 d-none d-lg-block">
		<%= article.favorites.count %>
	</p>

	<%= button_to article_favorites_path(article), style: "text-decoration: none;" , method: :post, id: "favorite-button", remote: true do %>

		<span class="list-group-item list-group-item-action nav-font mb-2">
			<%= fa_icon("thumbs-up 2x") %>
			<span class="ml-1 font-weight-bold d-lg-none d-sm-inline">
				<%= article.favorites.count %>
			</span>
		</span>

	<% end %>

<% end %>