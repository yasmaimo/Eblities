<div class="container-fluid">
	<div class="row justify-content-center">

		<div class="left-sidebar col-lg-1 d-none d-lg-block">
			<div class="list-group left-sidebar-link">


				<!-- イイねしたかどうか -->
				<% if @article.favorited_by?(current_user) %>

					<p class="text-secondary text-center mb-2">
						<%= @article.favorites.count %>
					</p>

					<%= link_to article_favorites_path(@article), style: "text-decoration: none;" , method: :delete do %>

						<span class="list-group-item list-group-item-action nav-font bg-danger text-white mb-2">
							<%= fa_icon("thumbs-up 2x") %>
						</span>

					<% end %>

				<% else %>

					<p class="text-secondary text-center mb-2">
						<%= @article.favorites.count %>
					</p>

					<%= link_to article_favorites_path(@article), style: "text-decoration: none;" , method: :post do %>

						<span class="list-group-item list-group-item-action nav-font mb-2">
							<%= fa_icon("thumbs-up 2x") %>
						</span>

					<% end %>

				<% end %>


				<!-- キープしたかどうか -->
				<% if @article.kept_by?(current_user) %>

					<%= link_to keep_path(article_id: @article.id),style: "text-decoration: none;" , method: :delete do %>

						<span class="list-group-item list-group-item-action nav-font bg-danger text-white mb-2">
							<%= fa_icon("folder-open 2x") %>
						</span>

					<% end %>

				<% else %>

					<%= link_to keeps_path,style: "text-decoration: none;" , method: :post do %>

						<span class="list-group-item list-group-item-action nav-font mb-2">
							<%= fa_icon("folder-open 2x") %>
						</span>

					<% end %>

				<% end %>

				<%= link_to tag_timeline_path do %>
					<span class="list-group-item list-group-item-action nav-font mb-2" >
						<%= fa_icon("twitter 2x") %>
					</span>
				<% end %>

				<%= link_to tag_timeline_path do %>
					<span class="list-group-item list-group-item-action nav-font" >
						<%= fa_icon("facebook 2x") %>
					</span>
				<% end %>

			</div>
		</div>

		<div class="col-lg-7 col-md-10 col-sm-10">

			<p class="blank-margin"></p>

		    <tbody>
		      <tr><!-- ここでeach -->
		        <td>
		          <div class="card">
		            <div class="card-header">
		              <div class="row">

		                <div class="col-6 ranking-table">
		                	<img src="https://placehold.jp/40x40.png" class="rounded">
		                	<span class="text-secondary">
		                		<%= link_to @user.user_name, user_path(@user) %>
		                	</span>
		                </div>

		                <div class="col-6 small text-secondary text-right align-self-center">
		                	<span class="mx-1" >
		                		<%= @article.created_at.strftime('%Y/%m/%d') %>
		                	</span><br>

		                	<span class="mx-1">
		                		<%= fa_icon("folder-open") %><%= @article.keeps.count %>
		                	</span>

		                	<span class="mx-1">
		                		<%= fa_icon("comments") %><%= @article.comments.count %>
		                	</span>

		                </div>

		              </div>
		            </div>

		            <div class="card-body">

	                <div class="row">
	                  <div class="col-12">
	                  	<h2 class="font-weight-bold text-dark mt-1">
	                  		<%= @article.title %>
	                  	</h2>
	                  </div>
	                </div>
		            </div>

								<div class="d-lg-none d-sm-block">
									<!-- イイねしたかどうか -->
									<div class="row justify-content-center">
										<div class="col-5 text-center">

											<% if @article.favorited_by?(current_user) %>

												<%= link_to article_favorites_path(@article),style: "text-decoration: none;" , method: :delete do %>

													<span class="list-group-item list-group-item-action nav-font bg-danger text-white mb-2">
														<%= fa_icon("thumbs-up 2x") %>
														<span class="ml-1 font-weight-bold">
															<%= @article.favorites.count %>
														</span>
													</span>

												<% end %>

											<% else %>

												<%= link_to article_favorites_path(@article),style: "text-decoration: none;" , method: :post do %>

													<span class="list-group-item list-group-item-action nav-font mb-2">
														<%= fa_icon("thumbs-up 2x") %>
														<span class="ml-1 font-weight-bold">
															<%= @article.favorites.count %>
														</span>
													</span>

												<% end %>

											<% end %>

										</div>

										<div class="col-5 text-center">
											<!-- キープしたかどうか -->
											<% if @article.kept_by?(current_user) %>

												<%= link_to keep_path(article_id: @article.id),style: "text-decoration: none;" , method: :delete do %>

													<span class="list-group-item list-group-item-action nav-font bg-danger text-white mb-2">
														<%= fa_icon("folder-open 2x") %>
													</span>

												<% end %>

											<% else %>

												<%= link_to keeps_path,style: "text-decoration: none;" , method: :post do %>

													<span class="list-group-item list-group-item-action nav-font mb-2">
														<%= fa_icon("folder-open 2x") %>
													</span>

												<% end %>

											<% end %>

										</div>
									</div>

								</div>

		            <div class="title-border"></div>

                <div class="col-sm-12 mt-4" style="overflow: scroll;">
                    <%= raw @article.body %>
                </div>

		          </div>
		        </td>
		      </tr><!-- eachを終了 -->

		    </tbody>
		  </table>

	  </div>

	  <div class="d-lg-none d-sm-block col-sm-10">
	  	<p class="text-center my-4 text-white " style="background-color:#B40404;">コメント</p>
      <table class="table" style="word-break: break-all;">
        <tbody>
          <% if @article.comments.exists? %>
            <% @article.comments.each do |comment| %>
              <tr>
                <td class="bg-white">
                  <p class="text-dark">
                    <%= comment.user.user_name %>
                  </p>
                  <span class="text-secondary">
                    <%= comment.created_at.strftime('%Y/%m/%d') %>
                  </span>
                  <div class="mt-1 small text-dark">
                    <%= comment.comment %>
                  </div>
                </td>
              </tr>
            <% end %>

          <% else %>

            <p class='text-center'>コメントはありません</p>

          <% end %>

          	<div>
	          	<%= form_for [@article,@comment] do |f| %>
								<%= f.text_field :comment, class: "form-cotrol", placeholder: "コメント *500文字まで", rows:'5' %>
								<%= f.submit "Post", class: "btn-sm btn-outline-success col-1" %>
							<% end %>
						</div>

        </tbody>
      </table>
	  </div>

	  <div class="col-lg-3 col-md-10 col-sm-10 right-sidebar">

				<table class="table bg-white">
				  <thead>
				    <tr>
				      <th colspan="2">人気ユーザー</th>
