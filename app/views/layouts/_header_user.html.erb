<% if controller.controller_name != "two_factor_auths" %>

  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <%= link_to "Eb", root_path, class: "h1 text-white logo", style: "text-decoration: none;"%>

    <span class="copy ml-3 text-white">
      <span class="h5 logo">Eblities</span><br>
      クリエイターの知識をシェアするサイト
    </span>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <%= search_form_for @search do |f| %>
        <div class="form-inline my-2 my-lg-0 ml-lg-3 justify-content-center">
          <% if controller.controller_name == "articles" && controller.action_name == "index" %>
            <%= f.text_field :title_or_body_cont, class: "col-sm-9 col-xs-12 form-control", placeholder: '記事を検索' %>
          <% else %>
            <%= f.text_field :title_or_body_cont, class: "col-sm-9 col-xs-12 form-control", placeholder: '記事を検索', value: nil %>
          <% end %>
          <%= f.button fa_icon("search"), class: 'col-sm-2 col-xs-12 btn btn-outline-light my-2 ml-sm-2 '%>
        </div>
      <% end %>

      <ul class="navbar-nav ml-auto text-right">
        <li class="nav-item my-2">
          <%= render 'notifications/notification_dropdown' %>
        </li>
        <li class="nav-item dropdown my-2">
          <a class="nav-link dropdown-toggle text-white nav-font" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            メニュー
          </a>
          <div class="dropdown-menu text-right  dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "ユーザーを探す", users_path, class: "dropdown-item nav-font my-3" %>
            <%= link_to "タグから記事を探す", tags_path, class: "dropdown-item nav-font my-3" %>
            <%= link_to "キープ一覧", keeps_path, class: "dropdown-item nav-font my-3" %>
            <%= link_to "下書き一覧", user_drafts_path(current_user), class: "dropdown-item nav-font my-3" %>
            <%= link_to "投稿する", new_article_path, class: "dropdown-item nav-font my-3" %>
          </div>
        </li>
        <li class="nav-item my-2">
          <%= link_to "マイページ", user_path(current_user), class: "nav-link text-white nav-font" %>
        </li>
        <li class="nav-item dropdown align-self-center ml-auto">
          <a class="nav-link dropdown-toggle text-white nav-font" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= attachment_image_tag current_user, :image, fallback: "no_image.jpg", class: "card-img", style: "max-height: 40px; max-width: 40px;" %>
          </a>
          <div class="dropdown-menu text-right dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item nav-font my-3" %>

            <%= link_to "プロフィール編集・設定", user_profile_path(current_user), class: "dropdown-item nav-font my-3" %>
          </div>
        </li>

      </ul>
    </div>
  </nav>

<% end %>