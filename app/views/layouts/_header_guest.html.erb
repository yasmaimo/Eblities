<% if controller.controller_name != "omniauth_callbacks" %>

<% if controller.controller_name != "session" && controller.action_name != "create" %>

  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <%= link_to "Eb", root_path, class: "h1 text-white logo", style: "text-decoration: none;"%>

    <span class="copy ml-3 text-white">
      <span class="h5 logo">Eblities</span><br>
      クリエイターの知識をシェアするサイト
    </span>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <%= search_form_for @search do |f| %>
        <div class="form-inline my-2 my-lg-0 ml-lg-3 justify-content-center">
          <% if controller.controller_name == "articles" && controller.action_name == "index" %>
            <%= f.text_field :title_or_body_cont, class: "col-sm-9 col-xs-12 form-control", placeholder: '記事を検索' %>
          <% else %>
            <%= f.text_field :title_or_body_cont, class: "col-sm-9 col-xs-12 form-control", placeholder: '記事を検索', value: nil %>
          <% end %>
          <%= f.button fa_icon("search"), class: 'col-sm-2 col-xs-12 btn btn-outline-light my-2 ml-sm-2 '%>
        </div>
      <% end %>

      <ul class="navbar-nav ml-auto text-right">

        <li class="nav-item">
          <%= link_to "Eblitiesとは？", helps_path, class: "nav-link text-white nav-font" %>
        </li>

        <li class="nav-item dropdown text-right">
          <a class="nav-link dropdown-toggle text-white nav-font" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            メニュー
          </a>
          <div class="dropdown-menu text-right dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "ユーザーを探す", users_path, class: "dropdown-item nav-font" %>
            <%= link_to "タグから記事を探す", tags_path, class: "dropdown-item nav-font" %>
          </div>
        </li>

        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path, class: "nav-link text-white nav-font" %>
        </li>

        <li class="nav-item">
          <%= link_to "ログイン", new_user_session_path, class: "nav-link text-white nav-font" %>
        </li>

      </ul>
    </div>
  </nav>

<% end %>

<% end %>