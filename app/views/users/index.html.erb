<div class="container-fluid">
	<div class="row justify-content-center">

		<p class="col-12 d-lg-block d-none"></p>

		<div class="col-lg-3 col-sm-11">

	    <%= search_form_for @search_user do |f| %>
	      <div class="form-inline my-lg-0 my-2">
	        <%= f.text_field :user_name_cont, class: "col-sm-10 col-xs-12 form-control", placeholder: 'ユーザーを検索' %>
	        <%= f.button fa_icon("search"), class: 'col-sm-2 col-xs-12 btn btn-outline-dark my-lg-0 my-2'%>
	      </div>
	    <% end %>

	  </div>

		<div class="col-lg-9 col-sm-11">

			<% if User.exists? %>

			  <table class="table bg-white">
				  <thead class="">
				    <tr>
				    	<th>
					    	<div class="row">
					    		<div class="col-7">
					    			<span>ユーザー一覧</span>
					    		</div>
					    	</div>
				    	</th>
				    </tr>
				  </thead>

			    <tbody>

			    	<% @users.each do |user| %>

				      <tr><!-- ここでeach -->
				        <td>
				          <div class="card">
				            <div class="card-header">
				              <div class="row">

				                <div class="col-6 ranking-table">
				                	<img src="https://placehold.jp/40x40.png" class="rounded">
				                	<span class="text-secondary">
				                		<%= link_to user.user_name, user_path(user) %>
				                	</span>
				                </div>

				                <div class="col-6 small text-secondary text-right align-self-center">

													<% unless current_user?(user) %>

														<div id="follow_form">

														<% if current_user.following?(user) %>

															<%= form_for(current_user.following_relationships.find_by(following_id: user.id), html: { method: :delete }) do |f| %>
															<%= f.submit "Unfollow", class: "btn btn-large follow-btn" %>

														<% end %>

													<% else %>

															<%= form_for(current_user.following_relationships.build(following_id: user.id)) do |f| %>
																<div>
																	<%= f.hidden_field :following_id %>
																</div>
																<%= f.submit "Follow", class: "btn btn-large btn-primary follow-btn" %>
															<% end %>

														<% end %>

														</div>

													<% end %>

				                	<span class="mx-1">
				                		<%= fa_icon("paperclip") %><%= user.articles.count %>個の記事
				                	</span>

				                	<span class="mx-1">
				                		<%= fa_icon("thumbs-up") %><%= user.favorites.count %>イイね
				                	</span>

				                </div>

				              </div>
				            </div>

				            <div class="card-body">

			                <div class="row">
			                  <div class="col-12">
			                  	<span class="font-weight-bold text-dark">
			                  		<%= user.introduction %>
			                  	</span>
			                  </div>

			                </div>

				            </div>
				          </div>
				        </td>
				      </tr><!-- eachを終了 -->

				    <% end %>

			    <% else %>

					  <table class="table bg-white">
						  <thead>
						    <tr>
						    	<th class="text-center">
					    			<span>ユーザーはまだいません</span>
						    	</th>
						    </tr>
						  </thead>
						</table>

			    <% end %>

		    </tbody>
		  </table>

		</div>
	</div>
</div>