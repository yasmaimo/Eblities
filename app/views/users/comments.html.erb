<div class="container-fluid">
	<div class="row">

		<div class="left-sidebar col-lg-2 d-none d-lg-block">

			<%= render 'articles/nav_bar' %>

		</div>

		<div class="col-lg-7 col-sm-11">

			<%= render 'users/nav_bar', user: @user %>

	    <%= search_form_for @search_comment, url: comments_path do |f| %>
	      <div class="form-inline my-lg-0 my-2">
	        <%= f.text_field :article_title_or_article_body_cont, class: "col-sm-10 col-xs-12 form-control", placeholder: @user.user_name + 'さんのコメントした記事を検索' %>
	        <%= f.button fa_icon("search"), class: 'col-sm-2 col-xs-12 btn btn-outline-dark my-lg-0 my-2'%>
	      </div>
	    <% end %>

			<% if Comment.exists?(user_id: @user) %>
				<% if @search_comment.result.count > 0 %>

				  <table class="table bg-white" id="articles">
					  <thead>
					    <tr>
					    	<th>
						    	<div class="row">
						    		<div class="col-12">
						    			<span><%= @search_comment.result.count %>件のコメントした記事</span>
						    		</div>
						    	</div>
					    	</th>
					    </tr>
					  </thead>

		    		<% if params[:q].present? %>
		    			<% if params[:q][:article_title_or_article_body_cont] != "" %>
			    			<p class="text-center font-weight-bold my-3">"<%= params[:q][:article_title_or_article_body_cont] %>"の検索結果</p>
		    			<% end %>
		    		<% end %>

				    <tbody class="page" id="user-articles">

				    	<%= render partial: 'articles/any_articles', locals: {any_elements: @comments} %>

				    </tbody>
				  </table>

			  <% elsif @search_comment.result.count == 0 %>

			  	<p class="text-center font-weight-bold mt-3">"<%= params[:q][:article_title_or_article_body_cont] %>"を含むコメントした記事はありません</p>

			 	<% end %>

	    <% else %>

				<p class="text-center font-weight-bold mt-3"><%= @user.user_name %>さんのコメントした記事はありません</p>

	    <% end %>

	    <div class="row justify-content-center">
	    		<p class="col-12"><%= paginate @comments %></p>
	    </div>

		</div>

		<%= render partial: 'users/info_sidebar', locals: {taggings: @taggings, tag: @tag, user: @user} %>

	</div>
</div>