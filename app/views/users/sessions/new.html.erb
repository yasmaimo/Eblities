<div class="container">
  <div class="row justify-content-center">

    <div class="col-12 text-center text-danger animated shake">
      <%= flash[:sign_in_failed] %>
    </div>

    <p class="col-12 h2 font-weight-bold text-center mt-5">ログイン</p>

    <div class="col-lg-3 col-sm-9 text-lg-left text-center">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div>
          <%= f.label :メールアドレス, class: "small text-secondary" %><br />
          <%= f.input :email, autofocus: true, autocomplete: "email", label: false, error: "入力内容を確認してください", class: "w-100" %>
        </div>

        <div>
          <%= f.label :パスワード, class: "small text-secondary" %><br />
          <%= f.input :password, autocomplete: "off", label: false, error: "入力内容を確認してください", class: "w-100" %>
        </div>
<%
=begin
%>
        <% if devise_mapping.rememberable? -%>
          <div class="mt-2 text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を残す, class: "small text-dark" %>
          </div>
        <% end -%>
<%
=end
%>
        <div class="text-center mt-2">
          <%= f.submit "ログイン", class: "btn btn-success mb-2" %>
        </div>
      <% end %>

    </div>

    <div class="col-lg-4 col-sm-9 align-self-center">

      <%= render "users/shared/links" %>

    </div>

    <div class="col-12 text-center my-2">

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規登録画面へ", new_registration_path(resource_name), class: "text-secondary" %>
      <% end -%>
<%
=begin
%>
      ・
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "パスワードを忘れた", new_password_path(resource_name), class: "text-secondary" %>
      <% end -%>
<%
=end
%>
    </div>

  </div>
</div>
