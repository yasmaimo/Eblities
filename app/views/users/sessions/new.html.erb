<div class="container">
  <div class="row justify-content-center">

    <p class="col-12 h2 font-weight-bold text-center mt-5">ログイン</p>

    <div class="col-lg-3 col-sm-9 text-lg-left text-center">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div>
          <%= f.label :メールアドレス, class: "small text-secondary" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
        </div>

        <div class="mt-3">
          <%= f.label :パスワード, class: "small text-secondary" %><br />
          <%= f.password_field :password, autocomplete: "off", class: "w-100" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="my-2 text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を残す, class: "small text-dark" %>
          </div>
        <% end -%>

        <div class="text-center">
          <%= f.submit "ログイン", class: "btn btn-success mb-2" %>
        </div>
      <% end %>

    </div>

    <div class="col-lg-4 col-sm-9 align-self-center">

      <%= render "users/shared/links" %>

    </div>

    <div class="col-12 text-center my-2">

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規登録", new_registration_path(resource_name), class: "text-secondary" %>
      <% end -%>
      ・
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "パスワードを忘れた", new_password_path(resource_name), class: "text-secondary" %>
      <% end -%>

    </div>

  </div>
</div>
