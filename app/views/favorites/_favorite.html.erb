<% if article.favorited_by?(current_user) %>

	<%= link_to article_favorites_path(article), style: "text-decoration: none;", method: :delete, id: "favorite-link", remote: true do %>

		<span class="list-group-item list-group-item-action nav-font text-white mb-2" style="background-color: #ffa500;">
			<div class="font-weight-bold d-md-none d-block">
				<%= article.favorites.count %>
			</div>
			<span class="h5"><%= fa_icon("thumbs-up") %></span>
			<span class="font-weight-bold d-md-inline d-none">
				<%= article.favorites.count %>
			</span>
		</span>

	<% end %>

<% else %>

	<%= link_to article_favorites_path(article), style: "text-decoration: none;" , method: :post, id: "favorite-link", remote: true do %>

		<span class="list-group-item list-group-item-action nav-font mb-2">
			<div class="font-weight-bold d-md-none d-block">
				<%= article.favorites.count %>
			</div>
			<span class="h5"><%= fa_icon("thumbs-up") %></span>
			<span class="font-weight-bold d-md-inline d-none">
				<%= article.favorites.count %>
			</span>
		</span>

	<% end %>

<% end %>